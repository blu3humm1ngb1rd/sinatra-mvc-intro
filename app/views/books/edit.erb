<form action="/books/<%= @book.id%>" method="POST">
  <input type="hidden" name="_method" value="patch">
  <label for="name">Name</label><br>
  <input id="name" type=text name="title" value="<%=@book.title%>"><br>
  <label for="author">Author</label><br>
  <input id="author" type=text name="author" value="<%=@book.author%>"><br>
  <label for="snippet">Snippet</label><br>
  <textarea id="snippet" name="snippet"><%=@book.snippet%></textarea><br>
  <input type="submit">
</form>
